<!DOCTYPE html>
<html>
<head>
  <title>Octaves</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<% session[:user] = @user %>
<% if @user %>
  <%= button_to "Log out", logout_path, :method=>:delete, :class=>:destroy %>
  <%= link_to "High Scores", users_path %>
<% end %>

<%= yield %>

</body>
</html>
