<p id="notice"><%= notice %></p>

<h1>High Scores</h1>
<%= @user.first_name%>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each_with_index do |user, index| %>
      <tr>
        <td><%= index + 1 %>.</td>
        <td><%= user.username %></td>
        <td class="score" style="padding-left: 10px;"> Chord High Score</td>
        <div class="score"><%= user.chord_high_score %></div>
        <td class="score" style="padding-left: 10px;"> Scale High Score</td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

